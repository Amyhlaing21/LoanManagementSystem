@model LoanManagementSystem.Models.Contract<h2>Create Contract</h2>@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" })){@Html.AntiForgeryToken()@Html.ValidationSummary(true, "", new { @class = "text-danger" })<div class="form-group">    @Html.LabelFor(m => m.LoanId, "Borrower Name")    @Html.DropDownList("LoanId", null, "--Select Name--", new { @class = "form-control" })    @Html.ValidationMessageFor(m => m.LoanId)</div><div class="form-group">    @Html.LabelFor(m => m.SigningDate)    @Html.TextBoxFor(m => m.SigningDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })    @Html.ValidationMessageFor(m => m.SigningDate)</div><div class="form-group">    @Html.Label("Contract File")    <input type="file" name="ContractFile" class="form-control" /></div><button type="submit" class="btn btn-success">Upload</button>}