@model IEnumerable<LoanManagementSystem.Models.Contract><h2>Contracts</h2><p>    @Html.ActionLink("Add New Contract", "Create", null, new { @class = "btn btn-success" })</p><table class="table table-striped table-bordered">    <thead>        <tr>            <th>Loan</th>            <th>Signing Date</th>            <th>Contract File</th>            <th>Actions</th>        </tr>    </thead>    <tbody>        @foreach (var c in Model)        {<tr>    <td>@c.Loan.LoanType - @c.Loan.Borrower.FullName</td>    <td>@c.SigningDate.ToShortDateString()</td>    <td>@Html.ActionLink("Download", "Download", new { id = c.Id })</td>    <td>        @Html.ActionLink("Delete", "Delete", new { id = c.Id }, new { @class = "btn btn-danger btn-sm" })    </td></tr>}    </tbody></table>