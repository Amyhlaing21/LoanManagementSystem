@{    ViewBag.Title = "Dashboard";    Layout = "~/Views/Shared/_Layout.cshtml";}<div class="container mt-4">    <h2>@ViewBag.WelcomeMessage</h2>    <p>This system allows you to manage Borrowers, Loans, Repayments, Interest Rates, Transactions, and Contracts efficiently.</p>    <hr />    <div class="row">        <div class="col-md-4">            <div class="card text-white bg-primary mb-3">                <div class="card-header">Borrowers</div>                <div class="card-body">                    <h5 class="card-title">Manage Borrowers</h5>                    <p class="card-text">Create, edit, view, and delete borrowers.</p>                    @*<a href="@Url.Action("Index", "Borrower")" class="btn btn-light btn-sm">Go</a>*@                </div>            </div>        </div>        <div class="col-md-4">            <div class="card text-white bg-success mb-3">                <div class="card-header">Loans</div>                <div class="card-body">                    <h5 class="card-title">Manage Loans</h5>                    <p class="card-text">Create and track loans and repayments.</p>                    @*<a href="@Url.Action("Index", "Loan")" class="btn btn-light btn-sm">Go</a>*@                </div>            </div>        </div>        <div class="col-md-4">            <div class="card text-white bg-warning mb-3">                <div class="card-header">Reports</div>                <div class="card-body">                    <h5 class="card-title">Transactions & Contracts</h5>                    <p class="card-text">View all transactions and contracts for each loan.</p>                    @*<a href="@Url.Action("Index", "Transaction")" class="btn btn-light btn-sm">Go</a>*@                </div>            </div>        </div>    </div></div>