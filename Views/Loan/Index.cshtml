@model IEnumerable<LoanManagementSystem.Models.Loan><h2>Loans</h2><a href="@Url.Action("Create")" class="btn btn-success">Add Loan</a><table class="table table-striped mt-3">    <thead>        <tr>            <th>Borrower</th>            <th>Amount</th>            <th>Type</th>            <th>Interest Rate</th>            <th>Start Date</th>            <th>End Date</th>            <th>TotalAmountWithInterest</th>        </tr>    </thead>    <tbody>        @foreach (var l in Model)        {<tr>    <td>@l.Borrower.FullName</td>    <td>@l.Amount</td>    <td>@l.LoanType</td>    <td>@l.InterestRate.RatePercent</td>    <td>@l.StartDate.ToShortDateString()</td>    <td>@l.EndDate.ToShortDateString()</td>    <td>@l.TotalAmountWithInterest</td></tr>}    </tbody></table>