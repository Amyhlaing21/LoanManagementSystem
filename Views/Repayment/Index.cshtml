@model IEnumerable<LoanManagementSystem.Models.Repayment><h2>Repayments</h2><p>    @Html.ActionLink("Add Repayment", "Create", null, new { @class = "btn btn-success" })</p><table class="table table-bordered table-striped">    <thead>        <tr>            <th>Loan</th>            <th>Payment Date</th>            <th>Amount Paid</th>            <th>Remaining Balance</th>            <th>Payment Term (Months)</th>            <th>Actions</th>        </tr>    </thead>    <tbody>        @foreach (var r in Model)        {<tr>    <td>@r.Loan.LoanType</td>    <td>@r.PaymentDate.ToShortDateString()</td>    <td>@r.AmountPaid.ToString("C")</td>    <td>@r.RemainingBalance.ToString("C")</td>    <td>@r.PaymentTermMonths</td>    <td>        @Html.ActionLink("Edit", "Edit", new { id = r.Id }, new { @class = "btn btn-primary btn-sm" }) |        @Html.ActionLink("Delete", "Delete", new { id = r.Id }, new { @class = "btn btn-danger btn-sm" })    </td></tr>}    </tbody></table>