<!DOCTYPE html><html><head>    <meta charset="utf-8" />    <meta name="viewport" content="width=device-width, initial-scale=1.0">    <title>@ViewBag.Title - Loan Management System</title>    @Styles.Render("~/Content/css")    @Scripts.Render("~/bundles/modernizr")</head><body>    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">        <div class="container">            @Html.ActionLink("Loan Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">                <span class="navbar-toggler-icon"></span>            </button>            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">                <ul class="navbar-nav flex-grow-1">                    @if (Request.IsAuthenticated)                    {                <li>@Html.ActionLink("Borrower Management", "Index", "Borrower", new { area = "" }, new { @class = "nav-link" })</li>                <li>@Html.ActionLink("Loan Management", "Index", "Loan", new { area = "" }, new { @class = "nav-link" })</li>                <li>@Html.ActionLink("Repayment Tracking", "Index", "Repayment", new { area = "" }, new { @class = "nav-link" })</li>                if (User.IsInRole("Admin"))                {                <li>@Html.ActionLink("Interest Rate Management", "Index", "InterestRate", new { area = "" }, new { @class = "nav-link" })</li>                }                <li>@Html.ActionLink("Transaction Management", "Index", "Transaction", new { area = "" }, new { @class = "nav-link" })</li>                <li>@Html.ActionLink("Contract Management", "Index", "Contract", new { area = "" }, new { @class = "nav-link" })</li>                <li>@Html.ActionLink("Loan Calculator", "Index", "LoanCalculator", new { area = "" }, new { @class = "nav-link" })</li>                @*if (User.IsInRole("Admin"))            {    <li>@Html.ActionLink("Admin Panel", "Index", "Admin", new { area = "" }, new { @class = "nav-link" })</li>    }*@                <li>                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "form-inline" }))                    {                @Html.AntiForgeryToken()                <button type="submit" class="btn btn-link nav-link" style="padding: 0; margin: 0;">Logout (@User.Identity.Name)</button>            }                </li>            }            else            {                <li>@Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "nav-link" })</li>                @*<li>@Html.ActionLink("Register", "Register", "Account", new { area = "" }, new { @class = "nav-link" })</li>*@            }                </ul>            </div>        </div>    </nav>    <div class="container body-content" style="margin-top:20px;">        @RenderBody()        <hr />        <footer>            <p>&copy; @DateTime.Now.Year - Loan Management System</p>        </footer>    </div>    @Scripts.Render("~/bundles/jquery")    @Scripts.Render("~/bundles/bootstrap")    @RenderSection("scripts", required: false)</body></html>