@model IEnumerable<LoanManagementSystem.Models.Transaction><h2>Transactions</h2><p>    @Html.ActionLink("Add Transaction", "Create", null, new { @class = "btn btn-success" })</p><table class="table table-bordered table-striped">    <thead>        <tr>            <th>Loan</th>            <th>Date</th>            <th>Type</th>            <th>Amount</th>            <th>Description</th>            <th>Actions</th>        </tr>    </thead>    <tbody>        @foreach (var t in Model)        {<tr>    <td>@t.Loan.LoanType</td>    <td>@t.TransactionDate.ToShortDateString()</td>    <td>@t.TransactionType</td>    <td>@t.Amount.ToString("C")</td>    <td>@t.Description</td>    <td>        @Html.ActionLink("Edit", "Edit", new { id = t.Id }, new { @class = "btn btn-primary btn-sm" }) |        @Html.ActionLink("Delete", "Delete", new { id = t.Id }, new { @class = "btn btn-danger btn-sm" })    </td></tr>}    </tbody></table>